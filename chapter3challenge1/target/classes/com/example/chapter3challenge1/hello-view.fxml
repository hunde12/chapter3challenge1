                     fill="#2E8B57" scaleX="2" scaleY="2"/>

            <Label fx:id="gardeningTipLabel" text="Great day for watering plants!" styleClass="eco-tip-text"/>
            <Label fx:id="airQualityLabel" text="AQI: 45 (Good)" styleClass="eco-tip-text"/>
        </VBox>
    </center>

    <bottom>
        <HBox fx:id="forecastBox" styleClass="forecast-box" alignment="CENTER">
            <!-- Forecast items will be added dynamically or statically here -->
            <VBox styleClass="forecast-item" alignment="CENTER">
                <Label text="Tomorrow"/>
                <Label text="24째C"/>
            </VBox>
            <VBox styleClass="forecast-item" alignment="CENTER">
                <Label text="Wed"/>
                <Label text="22째C"/>
            </VBox>
            <VBox styleClass="forecast-item" alignment="CENTER">
                <Label text="Thu"/>
